#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 メンバー登録
      %h5 ・必要項目を入力してください
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.text_field :nickname, class: "field__form", autofocus: true, autocomplete: "nickname", placeholder: 'お名前'
        .field
          = f.email_field :email, class: "field__form", autofocus: true, autocomplete: "email", placeholder: 'メールアドレス'
        .field
          - if @minimum_password_length
            -# %em
            -#   (#{@minimum_password_length} characters minimum)
          = f.password_field :password, class: "field__form", autocomplete: "new-password", placeholder: 'パスワード'
          %br/
          = f.label :〜6文字文字以上〜, class: "field__formtext"
        .field

          = f.password_field :password_confirmation, class: "field__form", autocomplete: "new-password", placeholder: 'パスワードの確認'
        .actions
          = f.submit "SEND"
      -# = render "devise/shared/links"
